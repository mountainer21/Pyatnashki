<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#AEADAD"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:text="Пятнашки"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- Игровое поле -->
    <GridLayout
        android:id="@+id/board_gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:alignmentMode="alignMargins"
        android:background="#353333"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/button_00"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_03"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_20"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_23"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_30"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_31"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_32"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:text="" />

        <Button
            android:id="@+id/button_33"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:text="" />

    </GridLayout>

    <!-- Кнопка "Новая игра" -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="262dp"
        android:gravity="center"
        android:textColor="#337135"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Новая игра" />

</LinearLayout>